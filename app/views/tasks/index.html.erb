
<h1><%= current_user.name %>のタスク一覧<%= link_to  '新規タスク登録', new_task_path, class: 'btn btn-success ml-5' %></h1>
  
<% if @tasks.any? %>
  
   <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク</th>
          <th>状態</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <th><%= link_to task.id,task %></th>
          <th><%= task.content %></th>
          <th><%= task.status %></th>
        </tr>
        <% end %>
      </tbody>
   </table>
   <div>
    <%= paginate @tasks %>
    </div>
<% end %>

