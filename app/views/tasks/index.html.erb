<h1>タスク一覧</h1>

<% if @tasks.any? %>

 <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>状態</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <th><%= link_to task.id,task %></th>
        <th><%= task.content %></th>
        <th><%= task.status %></th>
      </tr>
      <% end %>
    </tbody>
 </table>
 <div>
  <%= paginate @tasks %>
 </div>

 
<% end %>

<%= link_to "新規タスクの投稿",new_task_path, class: "btn btn-primary" %>